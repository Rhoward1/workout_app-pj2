 <br>
<h1>Log Your Workout here:</h1>
<div class="container-fluid max-width">
  <div class="row justify-content-center">
    <div class="col-auto ">

      
      <br>
      <form class="form new-workout-form" style="">
        
        <div class="form-group">
          <label for="project-name"></label>
          <input class="form-input"  type="text" placeholder="minutes" id="length" name="length" />
        </div>

        <div class="form-group">
          <label for="project-funding">
            </label>
          <input class="form-input"  type="text" placeholder="rating 1-5"id="rating" name="rating" />
        </div>

        <div class="form-group text-center">
          <button type="submit" class="btn btn-dark" style="width: 150px;">Create</button>
        </div>
      </form>
    </div>
    {{#if pastWorkouts}}

      <h3 class= "completedWorkout row justify-content-center">Completed Workouts</h3>
    {{!-- </div> --}}
      {{!-- <br>
                     <div class="col-md-6 past-list justify-content-center"> --}}

      {{#each pastWorkouts as |pastWorkout|}}
      <div class="card mb-3 past-list" style="max-width: 300px; display:flex; margin: 5px; ">
        <div class="row mb-2 justify-content-center">
          <div class="col-md-8">
            <div class="card-body">

              <div class="text-center">
                <h4 class="date">{{format_date date_created}}</h4>
                <h5 class="length">Length: {{pastWorkout.length}}</h5>

                <h5 class="rating">Rating:  {{pastWorkout.rating}}</h5>

                <button class="btn btn-sm btn-dark delete" data-id="{{pastWorkout.id}}
              ">DELETE</button>
              </div>

            </div>
          </div>
        </div>
      </div>


      {{/each}}
{{!-- </div> --}}
  {{/if}}
</div>
</div>
</div>
<script src="/js/pastWorkouts.js"></script>