      <h3 class= "completedWorkout row justify-content-center">Completed Workouts</h3>
    {{!-- </div> --}}
      {{!-- <br>
                     <div class="col-md-6 past-list justify-content-center"> --}}

      {{#each pastWorkouts as |pastWorkout|}}
      <div class="card mb-3 past-list" style="max-width: 300px; display:flex; margin: 5px; ">
        <div class="row mb-2 justify-content-center">
          <div class="col-md-8">
            <div class="card-body">

              <div class="text-center">
                <h4 class="date">{{format_date date_created}}</h4>
                <h5 class="length">Length: {{pastWorkout.length}}</h5>

                <h5 class="rating">Rating:  {{pastWorkout.rating}}</h5>

                <button class="btn btn-sm btn-dark delete" data-id="{{pastWorkout.id}}
              ">DELETE</button>
              </div>

            </div>
          </div>
