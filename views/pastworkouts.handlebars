<div class="container">
  <div class="row mt-4 justify-content-center">
    <div class="col-md-6 justify-content-center">
      <h3>Log Your Workout here:</h3>
      <form class="form new-workout-form">
        <div class="form-group">
          <label for="project-name">Length (in minutes):</label>
          <input class="form-input" type="text" placeholder="minutes" id="length" name="length" />
        </div>
        <div class="form-group">
          <label for="project-funding">
            Rating on a scale of 1(bad)-5(amazing):</label>
          <input class="form-input" type="text" id="rating" name="rating" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
{{!-- <div class= "col-md-8"> --}}
    {{#if pastWorkouts}}
       {{!-- <div class= "col-md-8"> --}}
      <h3 class= "row justify-content-center">Completed Workouts</h3>
    {{!-- </div> --}}
      <br>
      {{#each pastWorkouts as |pastWorkout|}}
      <div class="card mb-3" style="max-width: 300px; display:flex; margin: 5px; ">
        <div class="row mb-2 justify-content-center">
          <div class="col-md-8">
            <div class="card-body">

              <div class="text-center">
                <h3 class="date">{{format_date date_created}}</h3>
                <h5 class="length">Length: {{pastWorkout.length}}</h5>

                <h5 class="rating">Rating:{{pastWorkout.rating}}</h5>

                <button class="btn btn-sm btn-danger" data-id="{{pastWorkout.id}}
              ">DELETE</button>
              </div>

            </div>
          </div>
        </div>
      </div>


      {{/each}}

  {{/if}}
</div>
</div>
</div>
