<div class="container">
  <div class="row mt-12 justify-content-center">
    <div class="col-md-12 justify-content-center">

      <h1>Log Your Workout here:</h1>
      <br>
      <form class="form new-workout-form" style="display:flex; justify-content: center;">
        
        <div class="form-group">
          <label for="project-name"></label>
          <input class="form-input"  type="text" placeholder="minutes" id="length" name="length" />
        </div>

        <div class="form-group">
          <label for="project-funding">
            </label>
          <input class="form-input"  type="text" placeholder="rating 1-5"id="rating" name="rating" />
        </div>

        <div class="form-group" style= "margin-left: 5px;">
          <button type="submit" class="btn btn-dark">Create</button>
        </div>
      </form>
    </div>
