<h1>Weight 2 Go Fitness</h1>

<div class="row">
  <div class="col-4">
    <div class="input-group mb-3">
      <label class="input-group-text" for="inputGroupSelect01">Select Your Target Area</label>
      <select class="form-select" id="body-part-dropdown">
        <option selected>Choose...</option>
        <option value="back">back</option>
        <option value="cardio">cardio</option>
        <option value="chest">chest</option>
        <option value="lower arms">lower arms</option>
        <option value="upper arms">upper arms</option>
        <option value="shoulders">shoulders</option>
        <option value="waist">waist</option>
        <option value="upper legs">upper legs</option>
        <option value="lower legs">lower legs</option>
      </select>
    </div>
    <div class="input-group mb-3">
      <label class="input-group-text" for="inputGroupSelect01">Choose Your Equipment: </label>
      <select class="form-select" id="equipment-choice">
        <option selected>Choose...</option>
        <option value="body weight">body weight</option>
        <option value="dumbbell">dumbbell</option>
        <option value="kettlebell">kettlebell</option>
      </select>
    </div>
    <input class="btn btn-custom workoutButton" id="subglow" type="submit" value="submit">

    <input class="btn btn-custom compleatedWorkout" type="submit" value="Compleated Workout">


  </div>
  <div class="col-8">

    {{#if workouts.length}}

    {{#each workouts as |randomWorkout|}}
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-8 text-center">
          <img src={{randomWorkout.workoutGif}}>
        </div>
        <div class="col-md-4">
          <div class="card-body">
            <h5 class='workoutName'>Name of Workout: {{randomWorkout.workoutName}}</h5>
            <p class="targetEquipment">Equipment: {{randomWorkout.workoutEquipment}}</p>
            <p class="bodyPart">Body Part: {{randomWorkout.workoutBodypart}}</p>
            <p class="targetMuscle">Target Muscle: {{randomWorkout.workoutTarget}}</p>
          </div>
        </div>
      </div>
    </div>
